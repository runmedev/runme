{
  "$defs": {
    "agent.v1.ExperimentSpec.jsonschema.strict.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "properties": {
        "datasetPath": {
          "description": "Path to the folder containing the dataset to evaluate.",
          "minLength": 1,
          "type": "string"
        },
        "inferenceEndpoint": {
          "description": "URL of the backend inference service to call during evaluation.",
          "minLength": 1,
          "type": "string"
        },
        "outputDir": {
          "description": "Directory where experiment reports will be written.",
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "datasetPath",
        "outputDir",
        "inferenceEndpoint"
      ],
      "title": "Experiment Spec",
      "type": "object"
    }
  },
  "$id": "agent.v1.ExperimentSpec.jsonschema.strict.bundle.json",
  "$ref": "#/$defs/agent.v1.ExperimentSpec.jsonschema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
