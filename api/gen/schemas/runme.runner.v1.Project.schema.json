{
  "$id": "runme.runner.v1.Project.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^(envDirenv)$": {
      "anyOf": [
        {
          "pattern": "^DIR_ENV_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "DIR_ENV_ENABLED_WARN",
            "DIR_ENV_ENABLED_ERROR",
            "DIR_ENV_DISABLED"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "specifies if and how direnv should be used",
      "title": "Dir Env"
    },
    "^(envLoadOrder)$": {
      "description": "list of environment files to try and load\n start with",
      "items": {
        "type": "string"
      },
      "type": "array"
    }
  },
  "properties": {
    "env_direnv": {
      "anyOf": [
        {
          "pattern": "^DIR_ENV_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "DIR_ENV_ENABLED_WARN",
            "DIR_ENV_ENABLED_ERROR",
            "DIR_ENV_DISABLED"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "description": "specifies if and how direnv should be used",
      "title": "Dir Env"
    },
    "env_load_order": {
      "description": "list of environment files to try and load\n start with",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "root": {
      "default": "",
      "description": "project root folder",
      "type": "string"
    }
  },
  "title": "Project",
  "type": "object"
}
