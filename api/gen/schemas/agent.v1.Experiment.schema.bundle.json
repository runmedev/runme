{
  "$defs": {
    "agent.v1.Experiment.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "patternProperties": {
        "^(apiVersion)$": {
          "description": "API version of the resource, e.g. \"cloudassistant.io/v1alpha1\".",
          "minLength": 1,
          "type": "string"
        }
      },
      "properties": {
        "api_version": {
          "description": "API version of the resource, e.g. \"cloudassistant.io/v1alpha1\".",
          "minLength": 1,
          "type": "string"
        },
        "kind": {
          "description": "Kind of the resource. Always \"Experiment\" for this CRD.",
          "minLength": 1,
          "type": "string"
        },
        "metadata": {
          "$ref": "#/$defs/agent.v1.ObjectMeta.schema.json",
          "description": "Standard Kubernetes object metadata (name, labels, annotations, etc.)."
        },
        "spec": {
          "$ref": "#/$defs/agent.v1.ExperimentSpec.schema.json",
          "description": "User-defined configuration for the experiment."
        }
      },
      "required": [
        "api_version",
        "kind",
        "metadata",
        "spec"
      ],
      "title": "Experiment",
      "type": "object"
    },
    "agent.v1.ExperimentSpec.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "patternProperties": {
        "^(datasetPath)$": {
          "description": "Path to the folder containing the dataset to evaluate.",
          "minLength": 1,
          "type": "string"
        },
        "^(inferenceEndpoint)$": {
          "description": "URL of the backend inference service to call during evaluation.",
          "minLength": 1,
          "type": "string"
        },
        "^(outputDir)$": {
          "description": "Directory where experiment reports will be written.",
          "minLength": 1,
          "type": "string"
        }
      },
      "properties": {
        "dataset_path": {
          "description": "Path to the folder containing the dataset to evaluate.",
          "minLength": 1,
          "type": "string"
        },
        "inference_endpoint": {
          "description": "URL of the backend inference service to call during evaluation.",
          "minLength": 1,
          "type": "string"
        },
        "output_dir": {
          "description": "Directory where experiment reports will be written.",
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "dataset_path",
        "output_dir",
        "inference_endpoint"
      ],
      "title": "Experiment Spec",
      "type": "object"
    },
    "agent.v1.ObjectMeta.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "properties": {
        "name": {
          "description": "Name of the resource, e.g. \"experiment-test\".",
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "Object Meta",
      "type": "object"
    }
  },
  "$id": "agent.v1.Experiment.schema.bundle.json",
  "$ref": "#/$defs/agent.v1.Experiment.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
