{
  "$defs": {
    "runme.project.v1.DirectoryProjectOptions.jsonschema.strict.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "properties": {
        "ignoreFilePatterns": {
          "description": "A list of file patterns, compatible with .gitignore syntax,\n to ignore.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "path": {
          "description": "Path to a directory containing the project.",
          "type": "string"
        },
        "skipGitignore": {
          "description": "If true, .gitignore file is ignored, as well as .git/info/exclude.",
          "type": "boolean"
        },
        "skipRepoLookupUpward": {
          "description": "If true, it disables lookuping up for .git folder\n in the parent directories.",
          "type": "boolean"
        }
      },
      "required": [
        "path",
        "skipGitignore",
        "skipRepoLookupUpward"
      ],
      "title": "Directory Project Options",
      "type": "object"
    }
  },
  "$id": "runme.project.v1.DirectoryProjectOptions.jsonschema.strict.bundle.json",
  "$ref": "#/$defs/runme.project.v1.DirectoryProjectOptions.jsonschema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
