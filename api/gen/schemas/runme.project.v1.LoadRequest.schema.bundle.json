{
  "$defs": {
    "runme.project.v1.DirectoryProjectOptions.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "patternProperties": {
        "^(ignoreFilePatterns)$": {
          "description": "A list of file patterns, compatible with .gitignore syntax,\n to ignore.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "^(skipGitignore)$": {
          "default": false,
          "description": "If true, .gitignore file is ignored, as well as .git/info/exclude.",
          "type": "boolean"
        },
        "^(skipRepoLookupUpward)$": {
          "default": false,
          "description": "If true, it disables lookuping up for .git folder\n in the parent directories.",
          "type": "boolean"
        }
      },
      "properties": {
        "ignore_file_patterns": {
          "description": "A list of file patterns, compatible with .gitignore syntax,\n to ignore.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "path": {
          "default": "",
          "description": "Path to a directory containing the project.",
          "type": "string"
        },
        "skip_gitignore": {
          "default": false,
          "description": "If true, .gitignore file is ignored, as well as .git/info/exclude.",
          "type": "boolean"
        },
        "skip_repo_lookup_upward": {
          "default": false,
          "description": "If true, it disables lookuping up for .git folder\n in the parent directories.",
          "type": "boolean"
        }
      },
      "title": "Directory Project Options",
      "type": "object"
    },
    "runme.project.v1.FileProjectOptions.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "properties": {
        "path": {
          "default": "",
          "type": "string"
        }
      },
      "title": "File Project Options",
      "type": "object"
    },
    "runme.project.v1.LoadRequest.schema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "additionalProperties": false,
      "properties": {
        "directory": {
          "$ref": "#/$defs/runme.project.v1.DirectoryProjectOptions.schema.json"
        },
        "file": {
          "$ref": "#/$defs/runme.project.v1.FileProjectOptions.schema.json"
        },
        "identity": {
          "anyOf": [
            {
              "pattern": "^RUNME_IDENTITY_UNSPECIFIED$",
              "type": "string"
            },
            {
              "enum": [
                "RUNME_IDENTITY_ALL",
                "RUNME_IDENTITY_DOCUMENT",
                "RUNME_IDENTITY_CELL"
              ],
              "type": "string"
            },
            {
              "maximum": 2147483647,
              "minimum": -2147483648,
              "type": "integer"
            }
          ],
          "default": 0,
          "title": "Runme Identity"
        }
      },
      "title": "Load Request",
      "type": "object"
    }
  },
  "$id": "runme.project.v1.LoadRequest.schema.bundle.json",
  "$ref": "#/$defs/runme.project.v1.LoadRequest.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
