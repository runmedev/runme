{
  "$id": "agent.v1.Assertion.ShellRequiredFlag.schema.strict.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Verifies that a shell command includes specific flags.",
  "properties": {
    "command": {
      "minLength": 1,
      "type": "string"
    },
    "flags": {
